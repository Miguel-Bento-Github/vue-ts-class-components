{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "target": "ES5",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable", "ScriptHost"],
    "paths": {
      "@/*": ["src/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
